# Copy this file to .env and fill in your values
# Never commit the actual .env file to GitHub

# MongoDB Atlas connection string (get from atlas.mongodb.com)
MONGO_URL=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/project?retryWrites=true&w=majority

# Random strong secret for sessions (use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your_strong_random_secret_here

# Cloudinary credentials (get from cloudinary.com dashboard)
CLOUD_NAME=your_cloud_name
CLOUD_KEY=your_api_key
CLOUD_SECRET=your_api_secret

# Set to "production" when deployed
NODE_ENV=production
