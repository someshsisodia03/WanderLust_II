<% layout('boilerplate') -%>

    <body>
        <div class="forms" style="padding: 2.5rem 1rem;">
            <div class="wl-form-card">
                <div class="wl-form-title">✏️ Edit Listing</div>
                <div class="wl-form-subtitle">Update your listing details below</div>

                <form class="needs-validation" novalidate method="post" action="/editDetail/<%=d.id%>?_method=PATCH"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%=d.title%>">
                    </div>
                    <div class="mb-3">
                        <label for="desc" class="form-label">Description</label>
                        <textarea class="form-control" id="desc" name="description"
                            rows="3"><%=d.description%></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Current Image</label>
                        <div>
                            <img style="width:100%; max-height:200px; object-fit:cover; border-radius:10px;"
                                src='<%= d.image.url%>' alt="Current listing image">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="url" class="form-label">Replace Image <small
                                class="text-muted">(optional)</small></label>
                        <input type="file" class="form-control" id="url" name="url" accept="image/*">
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="price" class="form-label">Price per Night (₹)</label>
                            <input type="number" class="form-control" id="price" name="price" value="<%=d.price%>">
                        </div>
                        <div class="col-md-6">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" class="form-control" id="country" name="country" value="<%=d.country%>">
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="location" name="location" value="<%=d.location%>">
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn-wl flex-grow-1" style="justify-content:center;">
                            <i class="fa-solid fa-floppy-disk"></i> Save Changes
                        </button>
                        <a href="/moreabout/<%=d.id%>" class="btn-wl-outline" style="text-decoration:none;">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </body>