<% layout('boilerplate') -%>

    <style>
        .error-wrapper {
            min-height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #fff5f5 0%, #fff 100%);
        }

        .error-card {
            background: #fff;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(254, 66, 77, 0.12), 0 4px 20px rgba(0, 0, 0, 0.06);
            padding: 3rem 3.5rem;
            max-width: 520px;
            width: 90%;
            text-align: center;
            animation: popIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) both;
        }

        @keyframes popIn {
            0% {
                opacity: 0;
                transform: scale(0.85) translateY(20px);
            }

            100% {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .error-icon-circle {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            background: linear-gradient(135deg, #fe424d, #ff7b82);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            box-shadow: 0 8px 24px rgba(254, 66, 77, 0.35);
        }

        .error-icon-circle i {
            font-size: 2.4rem;
            color: white;
        }

        .error-code {
            font-size: 5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #fe424d, #ff7b82);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1;
            margin-bottom: 0.25rem;
        }

        .error-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 0.75rem;
        }

        .error-message {
            color: #6b7280;
            font-size: 1rem;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .btn-go-home {
            background: linear-gradient(135deg, #fe424d, #ff6b6b);
            color: white;
            border: none;
            padding: 0.75rem 2.2rem;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.25s ease;
            box-shadow: 0 4px 16px rgba(254, 66, 77, 0.35);
        }

        .btn-go-home:hover {
            background: linear-gradient(135deg, #e0353f, #fe424d);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(254, 66, 77, 0.45);
            text-decoration: none;
        }

        .error-divider {
            width: 50px;
            height: 4px;
            background: linear-gradient(135deg, #fe424d, #ff7b82);
            border-radius: 2px;
            margin: 1rem auto;
        }
    </style>

    <div class="error-wrapper">
        <div class="error-card">
            <div class="error-icon-circle">
                <i class="fa-solid fa-triangle-exclamation"></i>
            </div>

            <div class="error-code">Oops!</div>
            <div class="error-divider"></div>
            <div class="error-title">Something went wrong</div>
            <p class="error-message">
                <%= message %>
            </p>

            <a href="/listing" class="btn-go-home">
                <i class="fa-solid fa-house"></i>
                Back to Listings
            </a>
        </div>
    </div>